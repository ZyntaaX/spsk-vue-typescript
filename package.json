{
    "name": "spsk-fullstack",
    "scripts": {
        "start": "concurrently \"yarn server\" \"yarn client\" --names \"server,client\" --prefix-colors \"magenta,green\"",
        "build": "tsc -b .",
        "client": "vite client",
        "server": "cd server && yarn start:develop",
        "install:server": "cd server && yarn",
        "install:client": "cd client && yarn",
        "postinstall": "run-p install:*",
        "clear-db": "rm -rf postgres-db",
        "clear-node-modules": "npx npkill",
        "clear-project": "rm -rf ./**/dist && yarn clear-node-modules",
        "docker-up": "docker compose up -d",
        "docker-down": "docker compose down"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "npm-run-all": "^4.1.5",
        "typescript": "~5.3.0"
    },
    "dependencies": {
        "postinstall": "^0.9.0",
        "tsc-watch": "^6.0.4",
        "vite": "^5.0.12"
    },
    "resolutions": {
        "string-width": "4.2.3",
        "cliui": "7.0.4"
    }
}
